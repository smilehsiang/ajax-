<h1>Fetch</h1>
<h2 id="myH"></h2>
<img id="img1" class="w-25" />
<ul id="ul1">
</ul>
@section Scripts{
    <script>
        //console.log(fetch('@Url.Content("/api/index")'));
        fetch('@Url.Content("/api/index")')
            .then(response => {
                console.log(response)
                //     console.log(response.ok)
                //   return response.text()  //這裡也會得到一個promise物件
            })
        //.then(data => {
